<!DOCTYPE html>
<html>
  <head>
    <title>Connectop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class='nav navbar-nav navbar-left' >
          <span><%= link_to "Connectop", root_path, class: "top_logo" %></span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to " Home", user_posts_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to " Users", user_path(current_user.id), class: "glyphicon glyphicon-user users" %></li>
              <li><%= link_to " Books", "#", class: "glyphicon glyphicon-book books" %></li>
              <li><%= link_to " logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %></li>
            <% else %>
              <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to " About", "#", class: "glyphicon glyphicon-link about" %></li>
              <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
              <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <main>
    <div class='body'>
      <div class='container'>
        <%= yield %>
      </div>
      </div>
    </main>


    <footer>
      <div class='container'>
  	    <div class='row'>
    	     <div class='col-xs-3 col-xs-offset-9'>
    		    <p>CopyRight Mozuku28.inc</p>
    	    </div>
        </div>
      </div>
    </footer>

  </body>

</html>
