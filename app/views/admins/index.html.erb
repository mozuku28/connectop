
<div class="row">


    <div class="col-xs-12">
        <% @users.each do |user| %>
            <% user.posts.each do |post| %>
                <% post.trainings.each do |training| %>
                    <% training.loads.each do |load| %>
                        <div class="row border-bottom">

                            <div class="col-xs-2 text-center">
                                <%= attachment_image_tag user, :image, size: "70x70", format: 'jpeg', fallback: "/images/no_image.jpg", class: "attachment fallback img-circle img-border" %>
                            </div>

                            <div class="col-xs-10">
                                <div>
                                    <b><%= link_to user.name, user_posts_path(user.id), class: "#" %></b>
                                </div>
                                <div>
                                    <div><%= attachment_image_tag post, :image, size: "500x500", format: 'jpeg', class: "attachment post_image fallback" %></div>
                                </div>
                                <div class="post-memo">
                                    <div><%= post.memo %></div>
                                </div>
                                <div class="training-menu">
                                    <%= Menu.find(training.menu_id).name %>  ：  <%= load.load %>
                                </div>
                                <div>
                                    <%= link_to "Edit", admins_user_post_path(user.id, post.id), class: "#" %>
                                </div>
                                <div>
                                    <%= link_to "delete", admins_user_post_path(user.id, post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                                </div>
                            </div>

                        </div>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    </div>

</div>