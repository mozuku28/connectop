<h1>follows</h1>
<table class="table">
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th colspan = "3" >introduction</th>
        </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        
        <tr>
            <td>
                <%= attachment_image_tag user, :image, size: "100x100", format: 'jpeg', class: "attachment post profile_image fallback", fallback: "no_image.jpg"  %>
            </td>
            <td>
            <%= link_to user_posts_path(user.id) do %>
                <%= user.name %>
                <% end %>
            </td>
            <td>
                <%= user.introduction %>
            </td>
        </tr>
        
    <% end %>
    </tbody>
</table>