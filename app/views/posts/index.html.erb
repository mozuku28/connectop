<h1>投稿の一覧</h1>

<div class="row">
    <div class="col-xs-4">

        <h2>User info</h2>
        <th>イメージ</th>
            <table class="table">
                <tbody>
                    <tr></tr>
                    <tr>
                        <th>name</th>
                        <th><%= current_user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= current_user.introduction %></th>
                    </tr>
                </tbody>
            </table>
            <% if user_signed_in? %>
            <div class="row">
                <%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
            </div>
            <% end %>

            <h2>New post</h2>
            <%= form_for (@post) do |f| %>
                <div class="field row">
                    <%= f.attachment_field :image, class: "user_image" %>
                </div>
                <div class="field row">
                    <label for="title">たーーいとる</label><br>
                    <%= f.text_field :title, class: "col-xs-12 post_title", id: "post_title" %>
                </div>
                <div class="field row">
                    <label for="body">ぼでーーーーー！！！！！！</label><br>
                    <%= f.text_area :body, class: "col-xs-12 post_body", id: "post_body" %>
                </div>
                <div class="actions row">
                    <%= f.submit "Create Post", class: "btn btn-primary col-xs-12" %>
                </div>
            <% end %>

    </div>

    <div class="col-xs-8">
    <h2>Posts</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th colspan = "3" ></th>
                </tr>
            </thead>
            <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td>
                        <%= attachment_image_tag post.user, :image, size: "100x100", format: 'jpeg', class: "attachment post profile_image fallback" %>
                    </td>
                    <td>
                        <%= post.post_title %>
                    </td>
                    <td>
                        <%= post.post_body %>
                    </td>
                    <td>
                        <%= link_to "Show", "#", class: "#" %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>

</div>


